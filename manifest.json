{
	"name": "OSCAR Prettifier by H. Koev",
	"action": {
		"default_icon": {
			"128": "images/128.png",
			"64": "images/64.png",
			"48": "images/48.png",
			"32": "images/32.png",
			"16": "images/16.png"
		},
		"default_popup": "popup/index.html",
		"default_title": "OSCAR Prettifier by H. Koev"
	},
	"manifest_version": 3,
	"version": "0.1",
	"description": "Makes your Oscar a bit prettier.",
	"permissions": [
		"activeTab",
		"tabs",
		"scripting",
		"storage"
	],
	"content_scripts": [
		{
			"matches": [
				"https://oscar.airfrance-is.com/*",
				"https://koev.cz/*"
			],
			"css": [
				"highlight.css"
			],
			"js": [
				"data/classCodes.js",
				"data/iataCodes.js",
				"data/statusCodes.js",				
				"includes/preprocessor.js",
				"includes/readClass.js",
				"includes/readIata.js",
				"includes/readStatus.js",
				"includes/readOffice.js",
				"includes/replaceAsync.js",
				"includes/updateChanges.js",
				"includes/readFlightAndDate.js",
				"includes/processLines.js",
				"includes/etc/findIndex.js",
				"includes/etc/processLines.js",
				"includes/etc/convertDays.js",
				"includes/etc/convertTime.js",
				"includes/etc/convertDaysMilweb.js",
				"includes/etc/containsMultiple.js",
				"fonts/style.js",
				"syntax/index-add.js",
				"syntax/index-change.js",
				"syntax/index-delete.js",
				"syntax/index-rf.js",
				"syntax/index.js",
				"syntax/flight.js",
				"syntax/class.js",
				"syntax/time.js",
				"syntax/date.js",
				"syntax/iata.js",
				"syntax/contact.js",
				"syntax/message.js",
				"syntax/segment.js",
				"syntax/status.js",
				"syntax/pnr.js",
				"syntax/officename.js",
				"includes/language.js",
				"highlight.min.js",
				"highlightjs-highlight-lines.min.js",
				"contentScript.js"
			]
		}
	],
	"background": {
		"service_worker": "background.js"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"fonts/**/*.ttf"
			],
			"matches": [
				"https://oscar.airfrance-is.com/*"
			]
		}
	]
}